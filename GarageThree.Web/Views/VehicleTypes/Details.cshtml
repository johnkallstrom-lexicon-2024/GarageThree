@model VehicleTypeViewModel

@inject IRepository<VehicleType> vehicleTypeRepository

@{
    ViewBag.Title = "Vehicle Type Details";
    var vehicleTypes = await vehicleTypeRepository.GetAll();
    var next = vehicleTypes.SkipWhile(vt => vt.Id != Model.Id).Skip(1).FirstOrDefault();
    var vehicleTypes2 = vehicleTypes.ToList();
    vehicleTypes2.Reverse();
    var previous = vehicleTypes2.SkipWhile(vt => vt.Id != Model.Id).Skip(1).FirstOrDefault();
}

<div class="row d-flex justify-content-center">
    <div class="col-sm-6 mb-5 mt-3">
        <h3>@ViewBag.Title</h3>
        <div class="card bg-light">
            <div class="card-body">
                <div class="card-title fs-5 text-primary text-primary">
                    @Html.DisplayNameFor(model => model.Name)
                </div>
                <div class="card-text pb-3">
                    @Html.DisplayFor(model => model.Name)
                </div>
                <div class="card-title fs-5 text-primary text-primary">
                    @Html.DisplayNameFor(model => model.NumberOfWheels)
                </div>
                <div class="card-text pb-3">
                    @Html.DisplayFor(model => model.NumberOfWheels)
                </div>
                <div class="card-title fs-5 text-primary text-primary">
                    @Html.DisplayNameFor(model => model.AssignedVehicleCount)
                </div>
                <div class="card-text pb-3">
                    @Html.DisplayFor(model => model.AssignedVehicleCount)
                </div>
            </div>
        </div>
        <div class="card bg-light text-center mt-2 details-nav">
            <div class="card-body d-flex justify-content-between">
                 @if(previous is not null ){
                <a asp-controller="VehicleTypes" asp-action="Details" asp-route-id="@previous.Id">
                    <button class="btn btn-secondary">Previous</button>
                </a>
                }
                 @if(next is not null ){
                <a asp-controller="VehicleTypes" asp-action="Details" asp-route-id="@next.Id">
                    <button class="btn btn-secondary">Next</button>
                </a>
                }
            </div>
            <div class="card-body d-flex justify-content-between">
                 <a asp-controller="VehicleTypes" asp-action="Index">
                    <button class="btn btn-primary">Back</button>
                </a>
            </div>
        </div>
    </div>
</div>