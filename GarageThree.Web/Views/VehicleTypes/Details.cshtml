@model VehicleTypeViewModel

@inject IRepository<VehicleType> vehicleTypeRepository

@{
    ViewBag.Title = "Vehicle Type Details";
}

<div class="row d-flex justify-content-center">
    <div class="col-sm-6 mb-5 mt-3">
        <h3>@ViewBag.Title</h3>
        <div class="card bg-light">
            <div class="card-body">
                <div class="card-title fs-5 text-primary text-primary">
                    @Html.DisplayNameFor(model => model.Name)
                </div>
                <div class="card-text pb-3">
                    @Html.DisplayFor(model => model.Name)
                </div>
                <div class="card-title fs-5 text-primary text-primary">
                    @Html.DisplayNameFor(model => model.NumberOfWheels)
                </div>
                <div class="card-text pb-3">
                    @Html.DisplayFor(model => model.NumberOfWheels)
                </div>
                <div class="card-title fs-5 text-primary text-primary">
                    @Html.DisplayNameFor(model => model.AssignedVehicleCount)
                </div>
                <div class="card-text pb-3">
                    @Html.DisplayFor(model => model.AssignedVehicleCount)
                </div>
            </div>
        </div>
        <div class="card bg-light text-center mt-2 details-nav">
            <div class="card-body d-flex justify-content-between">
                <a asp-controller="VehicleTypes" asp-action="Previous" asp-route-id="@Model.Id">
                    <button class="btn btn-secondary">Previous</button>
                </a>
                <a asp-controller="VehicleTypes" asp-action="Next" asp-route-id="@Model.Id">
                    <button class="btn btn-secondary">Next</button>
                </a>
            </div>
            <div class="card-body d-flex justify-content-between">
                 <a asp-controller="VehicleTypes" asp-action="Index">
                    <button class="btn btn-primary">Back</button>
                </a>
            </div>
        </div>
    </div>
</div>