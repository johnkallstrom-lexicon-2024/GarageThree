@model VehicleTypeCreateOrEditViewModel

@{
    ViewBag.Title = "Edit Vehicle Type";
}

<div class="row d-flex justify-content-center">
    <div class="col-sm-8">
        <h3>@ViewBag.Title</h3>
        <div class="card bg-light">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div class="mb-3">
                        <label asp-for="@Model.Name" class="form-label"></label>
                        <input asp-for="@Model.Name" type="text" class="form-control">
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.NumberOfWheels" class="form-label"></label>
                        <input asp-for="@Model.NumberOfWheels" type="number" class="form-control">
                        <span asp-validation-for="@Model.NumberOfWheels" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between ">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a asp-action="Index" class="btn btn-primary" asp-controller="VehicleTypes">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>