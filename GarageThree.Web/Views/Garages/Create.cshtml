@model GarageCreateOrEditViewModel

@{
    ViewBag.Title = "Create Garage";
}

<h3>@ViewBag.Title</h3>
<div class="row">
    <div class="col-sm-8">
        <div class="card bg-light">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="mb-3">
                        <label asp-for="@Model.Name" class="control-label"></label>
                        <input asp-for="@Model.Name" type="text" class="form-control" />
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Capacity" class="control-label"></label>
                        <input asp-for="@Model.Capacity" type="number" class="form-control" />
                        <span asp-validation-for="@Model.Capacity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.HourlyRate" class="control-label"></label>
                        <input asp-for="@Model.HourlyRate" type="number" class="form-control" />
                        <span asp-validation-for="@Model.HourlyRate" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a asp-action="Index" class="btn btn-primary">Back</a>
                    </div>
                   </form>
              </div>
            </div>
           </div>
        </div>