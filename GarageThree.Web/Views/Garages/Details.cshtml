@model GarageViewModel
@inject IRepository<Garage> garageRepository

@{
    ViewBag.Title = "Garage Details";
    var garages = await garageRepository.GetAll();
    var next = garages.SkipWhile(g => g.Id != Model.Id).Skip(1).FirstOrDefault();
    var garages2 = garages.ToList();
    garages2.Reverse();
    var previous = garages2.SkipWhile(g => g.Id != Model.Id).Skip(1).FirstOrDefault();
}

<div class="row d-flex justify-content-center">
    <div class="col-sm-6 mb-5 mt-3">
        <h3>@ViewBag.Title</h3>
        <div class="card bg-light">
            <div class="card-body">
                <div class="card-title fs-5 text-primary text-primary">
                    @Html.DisplayNameFor(model => model.Name)
                </div>
                <div class="card-text pb-3">
                    @Html.DisplayFor(model => model.Name)
                </div>
                <div class="card-title fs-5 text-primary text-primary">
                    @Html.DisplayNameFor(model => model.Capacity)
                </div>
                <div class="card-text pb-3">
                    @Html.DisplayFor(model => model.Capacity)
                </div>
                <div class="card-title fs-5 text-primary text-primary">
                    @Html.DisplayNameFor(model => model.VehicleCount)
                </div>
                <div class="card-text pb-3">
                    @Html.DisplayFor(model => model.VehicleCount)
                </div>
            </div>
        </div>
  <div class="card bg-light text-center mt-2 details-nav">
            <div class="card-body d-flex justify-content-between">
                 @if(previous is not null ){
                <a asp-controller="Garages" asp-action="Details" asp-route-id="@previous.Id">
                    <button class="btn btn-secondary">Previous</button>
                </a>
                }
                 @if(next is not null ){
                <a asp-controller="Garages" asp-action="Details" asp-route-id="@next.Id">
                    <button class="btn btn-secondary">Next</button>
                </a>
                }
            </div>
             <div class="card-body d-flex justify-content-between">
                 <a asp-controller="Garages" asp-action="Index">
                    <button class="btn btn-primary">Back</button>
                </a>
            </div>
        </div>
</div>
</div>
