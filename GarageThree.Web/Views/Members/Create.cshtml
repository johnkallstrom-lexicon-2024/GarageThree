@model MemberCreateOrEditViewModel

@{
    ViewBag.Title = "Create Member";
}

<div class="row">
    <div class="col-sm-8">
        <div class="card bg-light">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="mb-3">
                        <label asp-for="@Model.Avatar" class="form-label"></label>
                        <input asp-for="@Model.Avatar" type="text" class="form-control">
                        <span asp-validation-for="@Model.Avatar"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Username" class="form-label"></label>
                        <input asp-for="@Model.Username" type="text" class="form-control">
                        <span asp-validation-for="@Model.Username"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.FirstName" class="form-label"></label>
                        <input asp-for="@Model.FirstName" type="text" class="form-control">
                        <span asp-validation-for="@Model.FirstName"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.LastName" class="form-label"></label>
                        <input asp-for="@Model.LastName" type="text" class="form-control">
                        <span asp-validation-for="@Model.LastName"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Email" class="form-label"></label>
                        <input asp-for="@Model.Email" type="email" class="form-control">
                        <span asp-validation-for="@Model.Email"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>