@model MemberCreateOrEditViewModel

@{
    ViewBag.Title = "Create Member";
}

@if (ViewBag.Message is not null && ViewBag.Message.IsActive)
{
    switch (ViewBag.Message.Type)
    {
        case MessageType.Success:
            <div class="alert alert-success my-2">@ViewBag.Message.Text</div>
            break;
        case MessageType.Danger:
            <div class="alert alert-danger my-2">@ViewBag.Message.Text</div>
            break;
    }
}
<h3>@ViewBag.Title</h3>
<div class="row">
    <div class="col-sm-8">
        <div class="card bg-light">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="mb-3">
                        <label asp-for="@Model.Avatar" class="form-label"></label>
                        <input asp-for="@Model.Avatar" type="text" class="form-control">
                        <span asp-validation-for="@Model.Avatar" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Username" class="form-label"></label>
                        <input asp-for="@Model.Username" type="text" class="form-control">
                        <span asp-validation-for="@Model.Username" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.FirstName" class="form-label"></label>
                        <input asp-for="@Model.FirstName" type="text" class="form-control">
                        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.LastName" class="form-label"></label>
                        <input asp-for="@Model.LastName" type="text" class="form-control">
                        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Age" class="form-label"></label>
                        <input asp-for="@Model.Age" type="number" class="form-control">
                        <span asp-validation-for="@Model.Age" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Email" class="form-label"></label>
                        <input asp-for="@Model.Email" type="email" class="form-control">
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.SSN" class="form-label"></label>
                        <input asp-for="@Model.SSN" type="text" class="form-control">
                        <span asp-validation-for="@Model.SSN" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>