@model MemberCreateOrEditViewModel

@{
    ViewBag.Title = "Edit Member";
}

<div class="row d-flex justify-content-center">
    <div class="col-sm-8">
        <h3>@ViewBag.Title</h3>
        <div class="card bg-light">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="SSN" />
                    <div class="mb-3">
                        @* special input for image links? *@
                        <label asp-for="@Model.Avatar" class="form-label"></label>
                        <input asp-for="@Model.Avatar" type="text" class="form-control">
                        <span asp-validation-for="@Model.Avatar" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Username" class="form-label"></label>
                        <input asp-for="@Model.Username" type="text" class="form-control">
                        <span asp-validation-for="@Model.Username" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.FirstName" class="form-label"></label>
                        <input asp-for="@Model.FirstName" type="text" class="form-control">
                        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.LastName" class="form-label"></label>
                        <input asp-for="@Model.LastName" type="text" class="form-control">
                        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Age" class="form-label"></label>
                        <input asp-for="@Model.Age" type="number" class="form-control">
                        <span asp-validation-for="@Model.Age" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Email" class="form-label"></label>
                        <input asp-for="@Model.Email" type="email" class="form-control">
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>